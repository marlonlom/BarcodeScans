<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_camera_barcode"
        android:layout_width="@dimen/dimen_image_size"
        android:layout_height="@dimen/dimen_image_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_camera_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/button_camera_scan" />

    <TextView
        android:id="@+id/textview_camera_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/text_initializing"
        android:textAlignment="center" />
</LinearLayout>